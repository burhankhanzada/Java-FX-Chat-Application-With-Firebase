<HBox fx:id="hBox" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <children>
                <StackPane prefHeight="60" prefWidth="60">
                    <children>
                        <HBox fx:id="avatar" alignment="CENTER" style="-fx-padding: 20;" styleClass="button"
                              StackPane.alignment="CENTER">
                            <SVGPath
                                    content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                    fill="WHITE" scaleX="2.0" scaleY="2.0" AnchorPane.bottomAnchor="10.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                    AnchorPane.topAnchor="0.0"/>
                        </HBox>
                        <Rectangle fx:id="rectangle_image" fill="black" height="60.0" visible="false" width="60.0"
                                   StackPane.alignment="CENTER"/>
                        <Circle fx:id="circle_image" fill="white" radius="30.5" visible="false"
                                StackPane.alignment="CENTER"/>
                        <Rectangle fx:id="rectangle_online" fill="#32ff32" height="15.0" visible="false" width="15.0"
                                   StackPane.alignment="BOTTOM_RIGHT"/>
                        <Circle fx:id="circle_online" fill="#32ff32" radius="7.5" visible="false"
                                StackPane.alignment="BOTTOM_RIGHT"/>
                    </children>
                </StackPane>
                <Label fx:id="label">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Label>
            </children>
            <HBox.margin>
                <Insets bottom="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </HBox>
    </children>
</HBox>
